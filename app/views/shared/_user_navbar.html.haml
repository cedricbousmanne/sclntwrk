%ul.nav.navbar-nav.navbar-right
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = image_tag current_user.photo.thumb("30x30#").url
      \
      = current_user.display_name
      %b.caret
    %ul.dropdown-menu{role: "menu" }
      %li
        = link_to edit_profile_path do
          %i.glyphicon.glyphicon-user
          Modifier mon profil
      %li.divider
      - if can?(:manage, current_community)
        %li
          = link_to edit_community_path(current_community) do
            %i.glyphicon.glyphicon-cog
            Configuration de la communauté
        %li
          = link_to members_path() do
            %i.glyphicon.glyphicon-list
            Gestion des membres
        %li.divider
      %li
        = link_to destroy_user_session_path, method: "delete" do
          %i.glyphicon.glyphicon-log-out
          Me déconnecter
