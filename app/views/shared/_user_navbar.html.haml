%ul.nav.navbar-nav
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      %i.glyphicon.glyphicon-cloud
      = t("navbar.my_communities", default: "My Communities")
      %b.caret
    %ul.dropdown-menu
      - for community in current_user.communities
        %li
          = link_to community.name, community_posts_path(community)
      %li.divider
      %li
        %a{href: "#"} One more separated link
%form.navbar-form.navbar-left{role: "search"}
  .form-group
    %input.form-control{placeholder: "Search", type: "text"}/
  %button.btn.btn-default{type: "submit"} Submit
%ul.nav.navbar-nav.navbar-right
  %li
    %a{href: "#"} Link
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = current_user.display_name
      %b.caret
    %ul.dropdown-menu
      %li
        = link_to edit_profile_path do
          %i.glyphicon.glyphicon-log-out
          = t("navbar.edit_my_profile", default: "Edit my profile")
      %li.divider
      %li
        = link_to destroy_user_session_path() do
          %i.glyphicon.glyphicon-user
          = t("navbar.logout", default: "Logout")