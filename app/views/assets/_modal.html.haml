.modal.fade{id: "asset-modal-#{asset.id}", tabindex: "-1", role: "dialog", "aria-hidden" => "true"}
  .modal-dialog
    .modal-content
      .modal-heading
      .modal-body
        .row
          .col-xs-12.col-sm-6.col-md-7.col-lg-7
            = image_tag asset.file.thumb("900x900>").url, class: "img-responsive"
          .col-xs-12.col-sm-6.col-md-5.col-lg-5
            %div.post-comments.verticaly-resizable{ id: "#modal-publication-#{asset.publication.id}-comments" }
              = render partial: "comments/list", locals: { commentable: asset.publication }
              = render partial: "comments/form", locals: { comment: asset.publication.comments.build }
          .clearfix
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Fermer