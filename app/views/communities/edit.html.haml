= simple_form_for @community, class: "form-horizontal", html: { multipart: true } do |f|

  = f.input :name
  = f.input :private, as: :boolean
  .fileinput.fileinput-new{"data-provides" => "fileinput", style: "width: 100%;"}
    .fileinput-new.thumbnail{style: "width: 100%; height: 150px;"}
      - if @community.logo.present?
        = image_tag @community.logo.thumb('x150>').url
    .fileinput-preview.fileinput-exists.thumbnail{style: "max-width: 200px; max-height: 150px;"}
    %div
      %span.btn.btn-default.btn-file
        %span.fileinput-new Choisir une image
        %span.fileinput-exists Modifier
        %input{name: "community[logo]", type: "file"}/
      %a.btn.btn-default.fileinput-exists{"data-dismiss" => "fileinput", href: "#"} Supprimer
  .clearfix

  = f.submit "Mettre à jour ma communauté", class: "btn btn-lg btn-success"
