.panel.panel-default{ "ng-file-drop" => "", "ng-file-over" => "ng-file-over"}
  .panel-body
    = f.input :content, label: false, placeholder: "Exprimez-vous", input_html: { class: "autosize" }
    / %table.table
    /   %tbody
    /     %tr{"ng-repeat" => "item in uploader.queue"}
    /       %td
    /         %strong
    /           {{ item.file.name }}
    /       %td{"ng-show" => "uploader.isHTML5", nowrap: "nowrap"} {{ item.file.size/1024/1024|number:2 }}  MB
    /       %td{"ng-show" => "uploader.isHTML5"}
    /         .progress{style: "margin-bottom: 0;"}
    /           .bar{"ng-style" => "{ 'width': item.progress + '%' }", role: "progressbar"}
    /       %td.text-center
    /         %span{"ng-show" => "item.isSuccess"}
    /           %i.glyphicon.glyphicon-ok
    /         %span{"ng-show" => "item.isCancel"}
    /           %i.glyphicon.glyphicon-ban-circle
    /         %span{"ng-show" => "item.isError"}
    /           %i.glyphicon.glyphicon-remove
    /       %td{nowrap: "nowrap"}
    /         %button.btn.btn-success.btn-xs{"ng-click" => "item.upload()", "ng-disabled" => "item.isReady || item.isUploading || item.isSuccess", type: "button"}
    /           %span.glyphicon.glyphicon-upload
    /           Upload
    /         %button.btn.btn-warning.btn-xs{"ng-click" => "item.cancel()", "ng-disabled" => "!item.isUploading", type: "button"}
    /           %span.glyphicon.glyphicon-ban-circle
    /           Cancel
    /         %button.btn.btn-danger.btn-xs{"ng-click" => "item.remove()", type: "button"}
    /           %span.glyphicon.glyphicon-trash
    /           Remove

    .row-inline
      %ul.assets-list.list-unstyled.list-inline
        %li{"ng-repeat" => "item in uploader.queue"}
          = link_to "#", class: "thumbnail" do
            %img.asset-spinner.asset-preview
            / .progress{style: "margin-bottom: 0;"}
            /   .bar{"ng-style" => "{ 'width': item.progress + '%' }", role: "progressbar"}
        %li{ "ng-repeat" => "asset in assets | orderBy:id:reverse" }
          = link_to "#", class: "thumbnail" do
            %img.asset-preview{ "ng-src" => "{{ asset.thumb_url }}" }
            %input{name: "post[asset_ids][]", value: "{{ asset.id }}", type: "hidden"}
  .panel-footer
    .pull-left
      .fileinput.fileinput-new{"data-provides" => "fileinput"}
        %span.btn-file
          %span.fileinput-new
            %i.glyphicon.glyphicon-paperclip
          %input{ "ng-file-select" => "", "type" => "file", "multiple" => "true", "name" => "asset[file]" }
        %span.fileinput-filename
    .pull-right
      = f.submit "Publier", class: "btn btn-success", "ng-submit" => "clearAssets"
    .clearfix